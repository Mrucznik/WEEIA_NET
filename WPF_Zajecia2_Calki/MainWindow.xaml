<Window x:Class="Dotnety2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dotnety2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Margin="10">
            <StackPanel Orientation="Horizontal">
                <TextBox Name="Skladnik1" Height="20" Width="50"/>
                <TextBlock>x^3 + </TextBlock>
                <TextBox Name="Skladnik2" Height="20" Width="50"/>
                <TextBlock>x^2 + </TextBlock>
                <TextBox Name="Skladnik3" Height="20" Width="50"/>
                <TextBlock>x + </TextBlock>
                <TextBox Name="Skladnik4" Height="20" Width="50"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0, 10">
                <TextBlock>Dla X=</TextBlock>
                <TextBox Name="TbX" Height="20" Width="50"/>
                <TextBlock Margin="10, 0,0,0">Y</TextBlock>
                <TextBlock Name="Wynik">=0</TextBlock>
            </StackPanel>
            <Button Content="Oblicz" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
